<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://store-images.s-microsoft.com/image/apps.46553.9007199266245084.10dc426e-68ed-468d-a460-05ac4788e7fa.0246ddd0-20c4-4597-bc78-83ade605faa6?mode=scale&q=90&h=1080&w=1920');">


  <div class="container" id="body">

    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div id="flexbox">
        <div class="card" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
        url(<%= cl_image_path @instrument.picture,  crop: :fill %>) ">
        </div>
        <h1><%= @instrument.name.capitalize %></h1>
        <p> Price: <%= @instrument.price %> $/day </p>
        <p>Location: <%= @instrument.location.capitalize %></p>
        <p> Category: <%= @instrument.category.capitalize %></p>
        <p> Description: <%= @instrument.description %></p>
        <p> Posted by: <%=@instrument.user.username %></p>
        <div class="banner-links">
          <% if policy(@instrument).edit? %>
            <%= link_to "Edit", edit_instrument_path(@instrument), class: "btn btn-default" %>
          <% end %>
          <% if policy(Booking).index? %>
            <%= link_to "Bookings of this instrument", bookings_path, class: "btn btn-lg btn-default" %>
          <% end %>

        </div>
        <div class="reviewbox">
        <p>Reviews for this instrument</p>
        <% @reviews.each do |review| %>
          <ul>
            <li><strong>Review by </strong> <%= review.booking.user.username %></li>
            <li><%= review.content %></li>
            <li><strong>Rating : </strong> <%= review.rating %></li>
          </ul>
        <% end %>
        </div>
        <div class="booking-form">
          <% if policy(@booking).create? %>
          <%= render 'form_booking', instrument: @instrument, booking: @booking %>
        <% end %>
        <%= link_to "Back", instruments_path, class: "btn  btn-default" %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>


